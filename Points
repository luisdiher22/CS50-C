#include <cs50.h>
#include <stdio.h>

int main (void)
{

     const int MINE= 2; //States how many points I had, const to avoid it being changed

    //Asks the user to submit how many points they lost
    int points = get_int("How many points did you lose?");

    //Three possible outcomes
    if (points < MINE)
    {
        printf("You lost fewer points than me.\n");
    }
    else if(points > MINE)
    {
        printf("You lost more points than me. \n");
    }
    else
    {
        printf("You lost the same points as me. \n");
    }
}
